{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ES2022",
    "moduleResolution": "Node",
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": false,
    "outDir": "dist",
    "rootDir": "src",
    "resolveJsonModule": true,
    "noEmitOnError": false
  },
  "exclude": ["dist", "node_modules"]
}
