{
  "name": "agentrelay-electron",
  "version": "0.1.0",
  "description": "Electron shell for AgentRelay on Windows",
  "main": "dist/main/main.js",
  "type": "module",
  "private": true,
  "scripts": {
    "build": "npm run build:main && npm run build:renderer",
    "build:main": "tsc -p tsconfig.main.json",
    "build:renderer": "vite build",
    "lint": "eslint \"src/**/*.ts\"",
    "start": "npm run build && electron dist/main/main.js",
    "dist": "npm run build && electron-builder --win --x64"
  },
  "dependencies": {
    "@radix-ui/react-dialog": "^1.0.5",
    "@radix-ui/react-dropdown-menu": "^2.0.6",
    "@radix-ui/react-label": "^2.0.2",
    "@radix-ui/react-scroll-area": "^1.0.5",
    "@radix-ui/react-separator": "^1.0.3",
    "@radix-ui/react-tooltip": "^1.0.7",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.1",
    "electron-log": "^5.1.0",
    "dayjs": "^1.11.12",
    "lucide-react": "^0.441.0",
    "react": "^18.3.1",
    "nanoid": "^5.0.7",
    "react-dom": "^18.3.1",
    "react-markdown": "^9.0.3",
    "remark-gfm": "^4.0.0",
    "rehype-highlight": "^7.0.0",
    "highlight.js": "^11.10.0",
    "tailwind-merge": "^2.5.2",
    "zustand": "^4.5.4"
  },
  "devDependencies": {
    "@types/node": "^20.12.7",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react": "^4.3.2",
    "autoprefixer": "^10.4.20",
    "electron": "^29.1.0",
    "electron-builder": "^24.13.3",
    "eslint": "^8.57.0",
    "postcss": "^8.4.47",
    "tailwindcss": "^3.4.13",
    "typescript": "^5.4.5",
    "vite": "^5.4.2"
  },
  "build": {
    "appId": "com.snapdescribe.agentrelay",
    "productName": "AgentRelay",
    "asar": true,
    "directories": {
      "buildResources": "build"
    },
    "files": [
      "dist/main/**/*",
      {
        "from": "src/renderer",
        "to": "renderer",
        "filter": ["**/*"]
      }
    ],
    "extraResources": [
      {
        "from": "../python-runtime/entrypoint.py",
        "to": "python-runtime/entrypoint.py"
      },
      {
        "from": "../python-runtime/dist",
        "to": "python-runtime"
      }
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        }
      ],
      "artifactName": "${productName}-${version}-win${arch}.${ext}"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "perMachine": false
    }
  }
}
